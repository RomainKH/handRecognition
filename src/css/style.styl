@font-face
    font-family "PlayFairDisplay"
    src url('../fonts/PlayfairDisplay-Bold.ttf') format('ttf')
    font-weight 600

@font-face
    font-family "PlayFairDisplay"
    src url('../fonts/PlayfairDisplay-Regular.ttf') format('ttf')
    font-weight 400

h1, h2, h3, h4, h5 
    font-family "PlayFairDisplay", serif
    font-weight 400

body
    margin 0
    padding 0
    position relative
    width 100vw
    height 100vh

.container
    height: 100vh
    width: 100%
    display flex
    align-items center
    justify-content center

.container-video
    position relative
    width: 640px
    height 480px
    .hands
        position absolute
        top 0
        right 0
        border 1px solid yellow
        transition all 1ms
       